# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=False
DJANGO_SETTINGS_MODULE=praxi_backend.settings.prod

# Allowed Hosts (comma-separated)
# Example: DJANGO_ALLOWED_HOSTS=your-app.vercel.app,your-domain.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (PostgreSQL)
# The code supports *either* DATABASE_URL *or* explicit variables.
#
# Option A (recommended): single connection string
DATABASE_URL=postgresql://user:password@host:5432/dbname
#
# Option B: explicit variables (either SYS_DB_* or POSTGRES_*)
SYS_DB_HOST=localhost
SYS_DB_PORT=5432
SYS_DB_NAME=praxiapp_system
SYS_DB_USER=postgres
SYS_DB_PASSWORD=your-database-password
#
# Common hosting variable names (also supported)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=praxiapp_system
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password

# CORS Settings (comma-separated origins)
# Example: CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Security Settings
SECURE_HSTS_SECONDS=31536000

# Static Files
# Vercel handles this automatically, but you can customize if needed
# STATIC_ROOT=staticfiles

# JWT Settings (optional - customize token lifetime)
# JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
# JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Email Configuration (optional - for password reset, notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# External Services (if needed)
# REDIS_URL=redis://user:password@host:port/0
# CELERY_BROKER_URL=redis://user:password@host:port/0
