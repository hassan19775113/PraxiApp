# ==============================================================================
# PraxiApp Backend - Environment Variables
# ==============================================================================
# Single-database architecture (no separate "medical" DB).
# For production: replace placeholders, set strong secrets, and use settings_prod.
# NEVER commit .env.
# ==============================================================================

# ------------------------------------------------------------------------------
# DJANGO SETTINGS
# ------------------------------------------------------------------------------

# Windows-native dev: use modular settings
DJANGO_SETTINGS_MODULE=praxi_backend.settings.dev

# For local dev this can be any string; for prod generate a strong key.
DJANGO_SECRET_KEY=dev-only-change-me

# Dev flags
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# ------------------------------------------------------------------------------
# DATABASE (default) - PostgreSQL (localhost)
# ------------------------------------------------------------------------------
SYS_DB_NAME=praxiapp_system
SYS_DB_USER=postgres
SYS_DB_PASSWORD=postgres
SYS_DB_HOST=localhost
SYS_DB_PORT=5432
SYS_DB_CONN_MAX_AGE=60

# ------------------------------------------------------------------------------
# REDIS / CELERY (Production placeholders)
# ------------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# ------------------------------------------------------------------------------
# JWT AUTHENTICATION (optional)
# ------------------------------------------------------------------------------
JWT_SIGNING_KEY=

# ------------------------------------------------------------------------------
# SECURITY (Production placeholders)
# ------------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=
CSRF_TRUSTED_ORIGINS=

# ------------------------------------------------------------------------------
# DEPLOYMENT (Gunicorn)
# ------------------------------------------------------------------------------
GUNICORN_WORKERS=4
GUNICORN_BIND=0.0.0.0:8000
